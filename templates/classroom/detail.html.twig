
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container col-md-20 text-center mt-3">
        <div class="row">
            <div class="col-10">
                <table class="table table-bordered">

                    <tr> 
                        <th>ID</th>
                        <td>{{classroom.id}}
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{classroom.name}} </td>
                    </tr>
                     <tr> 
                        <th>Quantity</th>
                        <td>{{classroom.quantity}} </td>
                    </tr>
                     <tr> 
                        <th>Description</th>
                        <td>{{ classroom.description }} </td>
                    </tr>
                    <tr>    
                        <th>Teacher</th>
                        <td>
                          {% for teacher in classroom.teacher %}
                                <a class="text-decoration-none" href="{{ path('teacher_detail', {'id' : teacher.id })}}">
                                    {{ teacher.name }} 
                                </a>
                                    <br>
                            {% endfor %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}