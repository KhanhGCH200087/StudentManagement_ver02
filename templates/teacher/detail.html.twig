{% extends 'base.html.twig' %}

{% block body %}
    <div class="container col-md-8 text-center mt-3">
        <div class="row">
            <div class="col-4">
                <img src="{{teacher.image}}" width="300" height="300">
            </div>
            <div class="col-6">
                <table class="table table-bordered">

                    <tr> 
                        <th>ID</th>
                        <td>{{teacher.id}}
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{teacher.name}} </td>
                    </tr>
                     <tr> 
                        <th>Age</th>
                        <td>{{teacher.age}} </td>
                    </tr>
                     <tr> 
                        <th> Gender </th>
                        <td>{{ teacher.gender }} </td>
                    </tr>
                     <tr> 
                        <th>Email </th>
                        <td>{{teacher.email}}</td>
                    </tr>
                    <tr>
                        {% if teacher.pass == null %}
                        <th> Password</th>
                        <td> Not Available </td>
                     {% else %}
                        <th> Password </th>
                        <td> Available </td>
                     {% endif %}
                    </tr>    
                    <tr>    
                        <th>Classroom</th>
                        <td>
                           {% for classroom in teacher.classrooms %}
                                <a class="text-decoration-none" href="{{ path('classroom_detail', {'id' : classroom.id })}}">
                                    {{ classroom.name }} 
                                </a>
                                    <br>
                            {% endfor %}
                        </td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
{% endblock %}